{
    "main": "dist/index.js",
    "name": "directo",
    "description": "A social network for events",
    "version": "0.0.1",
    "scripts": {
        "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
        "build": "tsc",
        "prestart": "npm run build",
        "start": "node .",
        "test": "jest --verbose",
        "test:cov": "jest --verbose --coverage"
    },
    "dependencies": {
        "class-validator": "^0.12.2",
        "express": "^4.17.1",
        "moment": "^2.27.0",
        "pg": "^8.5.1",
        "typeorm": "^0.2.25",
        "uuidv4": "^6.2.3",
        "bcrypt": "5.0.0",
        "dotenv": "8.2.0",
        "jsonwebtoken": "8.5.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.8",
        "@types/jest": "^26.0.19",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/node": "^14.6.4",
        "jest": "26.4.2",
        "ts-jest": "26.4.4",
        "jest-mock-extended": "1.0.10",
        "tslint": "^6.1.3",
        "typescript": "^4.0.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "rootDir": "./",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        }
    }
}
